@model ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Menu Item Details</h2>
<br />
<form asp-action="Details" method="post">
    <input type="hidden" asp-for="MenuItemId" />
    <div class="whiteBackground border row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 pb-4 d-md-none">
                <img src="@Model.MenuItem.Image" width="100%" style="border :1px solid #bbb9b9; border-radius:5px" />
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.Name"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.Description"></label>
                </div>
                <div class="col-md-8">
                    <div class="border p-2" style="border-radius:5px">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.Price"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.CategoryId"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.SubCategoryId"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="MenuItem.Spicyness"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="MenuItem.Spicyness" disabled asp-items="@Html.GetEnumSelectList<MenuItem.Espicy>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label class="text-info font-weight-bold" asp-for="Count"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4 mb-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Add To Shopping Cart" class="btn btn-primary form-control" />
                </div>
            </div>
        </div>
        <div class="col-3 d-none d-md-block offset-1">
            <img src="@Model.MenuItem.Image" width="100%" style="border :1px solid #bbb9b9; border-radius:5px" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}


