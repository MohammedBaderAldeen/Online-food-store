@model Category
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Category Details</h2>
<br />
<div class="whiteBackground border">
    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label" asp-for="id"></label>
        </div>
        <div class="col-5">
            <input asp-for="id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label" asp-for="Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailAndBackPartial" model="@Model.id" />
        </div>
    </div>
</div>

