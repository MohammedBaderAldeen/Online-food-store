@model MenuItemViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Menu Item</h2>
<br />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MenuItem.id" />
    <input type="hidden" asp-for="MenuItem.Image" />
    <div class="whiteBackground border row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MenuItem.Description" class="form-control" readonly></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.CategoryId"></label>
                </div>
                <div class="col-8">
                    <select id="ddlCategories" disabled asp-for="MenuItem.CategoryId" asp-items="@(new SelectList(Model.categoriesList,"id","Name"))" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.SubCategoryId"></label>
                </div>
                <div class="col-8">
                    <select id="ddlSubCategories" disabled asp-for="MenuItem.SubCategoryId" asp-items="@(new SelectList(Model.subCategoriesList,"id","Name"))" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-form-label" asp-for="MenuItem.Spicyness"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Spicyness" disabled asp-items="@Html.GetEnumSelectList<MenuItem.Espicy>()" class="form-control"></select>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_DeleteAndBackPartial" />
                </div>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image" width="100" style="border :1px solid #bbb9b9; border-radius:5px" />
        </div>
    </div>
</form>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />

        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'lists',
                menubar: 'file edit format'
            });
        </script>
    }



