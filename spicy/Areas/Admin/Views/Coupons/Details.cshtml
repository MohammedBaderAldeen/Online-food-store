@model Coupon
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details Coupon</h2>
<br />

    <div class="whiteBackground border">
        @if (Model.Picture != null)
        {
            <img style="width:100%; height:100%; border-radius:5px" src="@("data:image/jpeg;base64,"+Convert.ToBase64String(Model.Picture))" />
            <br />
            <br />
        }
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="Picture" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="CouponType"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" disabled class="form-control" asp-items="Html.GetEnumSelectList<Coupon.EcouponType>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Discount"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="MinimumAmount"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsActive" disabled type="checkbox" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailAndBackPartial" model="@Model.id" />
            </div>
        </div>
    </div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

